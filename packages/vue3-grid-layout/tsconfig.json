{
	"extends": "@vue/tsconfig/tsconfig.web.json",
	"include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/**/*.ts", "src/**/*.json"],
	"exclude": ["src/**/__tests__/*", "es", "dist"],
	"compilerOptions": {
		"composite": true,
		"resolveJsonModule": true,
		"rootDir": ".",
		"baseUrl": "./",
		"types": ["node"],
		"paths": {
			"@*": ["src/*"]
		}
	}
}
